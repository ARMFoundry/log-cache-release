# Log Cache
export HEALTH_ADDR="<%= "#{p('health_addr')}" %>"

export CA_PATH="/var/vcap/jobs/metric-cache-scheduler/config/certs/ca.crt"
export CERT_PATH="/var/vcap/jobs/metric-cache-scheduler/config/certs/metric_cache.crt"
export KEY_PATH="/var/vcap/jobs/metric-cache-scheduler/config/certs/metric_cache.key"

# Clustered Configuration
<%=
sorted_cache_instances=link("metric-cache").instances.sort_by {|i|i.address}
cache_addrs=sorted_cache_instances.map{|i| "#{i.address}:#{link("metric-cache").p('port')}"}

"
export NODE_ADDRS=#{cache_addrs.join(",")}
export COUNT=#{p('count')}
export INTERVAL=#{p('interval')}
"
%>
