#!/bin/bash -e

RUN_DIR=/var/vcap/sys/run/metric-cache-expvar-forwarder
LOG_DIR=/var/vcap/sys/log/metric-cache-expvar-forwarder
PIDFILE=${RUN_DIR}/metric-cache-expvar-forwarder.pid
JOB_DIR=/var/vcap/jobs/metric-cache-expvar-forwarder
CERT_DIR=$JOB_DIR/config/certs

PACKAGE_DIR=/var/vcap/packages/log-cache-expvar-forwarder
ENVIRONMENT=/var/vcap/jobs/metric-cache-expvar-forwarder/bin/environment.sh

case $1 in

  start)
    set +e
      killall -15 log-cache-expvar-forwarder
      killall -9 log-cache-expvar-forwarder
      killall -2 log-cache-expvar-forwarder
      killall -3 log-cache-expvar-forwarder
    set -e

    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    cd $PACKAGE_DIR

    ulimit -n 8192

    source $ENVIRONMENT
    echo $$ > $PIDFILE

    exec >>${LOG_DIR}/captured-metrics.log \
        2>>${LOG_DIR}/metric-cache-expvar-forwarder.log

    exec chpst -u vcap:vcap ./log-cache-expvar-forwarder

    ;;

  stop)
    set +e
      killall -15 log-cache-expvar-forwarder
      killall -9 log-cache-expvar-forwarder
      killall -2 log-cache-expvar-forwarder
      killall -3 log-cache-expvar-forwarder
    set -e

    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}"

    ;;

esac
