# Blackbox Test
export RUN_INTERVAL="<%= p('run_interval') %>"

# Log Cache
<%
  logCacheAddr = link("metric-store").address
  if_p("metric_store_host") do |logCacheHost|
      logCacheAddr = logCacheHost
  end
%>
export LOG_CACHE_ADDR="<%= "#{logCacheAddr}:#{link('metric-store').p('port')}" %>"
export CA_PATH="/var/vcap/jobs/metric-store-blackbox/config/certs/metric_store_ca.crt"
export CERT_PATH="/var/vcap/jobs/metric-store-blackbox/config/certs/metric_store.crt"
export KEY_PATH="/var/vcap/jobs/metric-store-blackbox/config/certs/metric_store.key"

# Datadog
export DATADOG_API_KEY="<%= p('datadog.api_key') %>"
export DATADOG_TAGS="<%= p('datadog.tags') %>"
export DATADOG_ORIGIN_HOST="<%= p('datadog.origin_host') %>"

