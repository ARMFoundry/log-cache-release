<%
    l = link('reverse_log_proxy')
    rlp_addr = "#{l.address}:#{l.p('reverse_log_proxy.egress.port')}"
%>

export HEALTH_ADDR="<%= "#{p('health_addr')}" %>"

# Logs Provider
export LOGS_PROVIDER_ADDR="<%= rlp_addr %>"
export LOGS_PROVIDER_CA_FILE_PATH="/var/vcap/jobs/metric-cache-nozzle/config/certs/logs_provider_ca.crt"
export LOGS_PROVIDER_CERT_FILE_PATH="/var/vcap/jobs/metric-cache-nozzle/config/certs/logs_provider.crt"
export LOGS_PROVIDER_KEY_FILE_PATH="/var/vcap/jobs/metric-cache-nozzle/config/certs/logs_provider.key"

# Log Cache
export LOG_CACHE_ADDR="<%= "localhost:#{link('metric-cache').p('port')}" %>"
export SHARD_ID="<%= p('shard_id') %>"
export SELECTORS="<%= p('selectors').join(',') %>"
export CA_PATH="/var/vcap/jobs/metric-cache-nozzle/config/certs/metric_cache_ca.crt"
export CERT_PATH="/var/vcap/jobs/metric-cache-nozzle/config/certs/metric_cache.crt"
export KEY_PATH="/var/vcap/jobs/metric-cache-nozzle/config/certs/metric_cache.key"
