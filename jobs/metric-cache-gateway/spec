---
name: metric-cache-gateway

templates:
  ctl: bin/ctl
  environment.sh.erb: bin/environment.sh
  ca.crt.erb: config/certs/ca.crt
  metric_cache.crt.erb: config/certs/metric_cache.crt
  metric_cache.key.erb: config/certs/metric_cache.key

packages:
- log-cache-gateway

provides:
- name: metric-cache-gateway
  type: metric-cache-gateway
  properties:
  - gateway_addr

consumes:
- name: metric-cache
  type: metric-cache

properties:
  gateway_addr:
    description: "The address for the metric-cache-gateway to listen on"
    default: ":8081"
