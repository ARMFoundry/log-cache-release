#!/bin/bash -e

RUN_DIR=/var/vcap/sys/run/metric-cache-gateway
LOG_DIR=/var/vcap/sys/log/metric-cache-gateway
PIDFILE=${RUN_DIR}/metric-cache-gateway.pid
JOB_DIR=/var/vcap/jobs/metric-cache-gateway
CERT_DIR=$JOB_DIR/config/certs

PACKAGE_DIR=/var/vcap/packages/log-cache-gateway
ENVIRONMENT=/var/vcap/jobs/metric-cache-gateway/bin/environment.sh

case $1 in

  start)
    set +e
      killall -15 log-cache-gateway
      killall -9 log-cache-gateway
      killall -2 log-cache-gateway
      killall -3 log-cache-gateway
    set -e

    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR

    cd $PACKAGE_DIR

    ulimit -n 8192

    source $ENVIRONMENT
    echo $$ > $PIDFILE
    exec chpst -u vcap:vcap ./log-cache-gateway &>> ${LOG_DIR}/metric-cache-gateway.log

    ;;

  stop)
    set +e
      killall -15 log-cache-gateway
      killall -9 log-cache-gateway
      killall -2 log-cache-gateway
      killall -3 log-cache-gateway
    set -e

    rm -f $PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}"

    ;;

esac
